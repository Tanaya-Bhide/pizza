<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <title>realtime pizza app</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <section class="hero py-16">
      <div class="container mx-auto flex items-center justify-between ">
        <div class="w-1/2">
          <h6 class="text-lg">Are You hungry?</h6>
          <h1 class="text-6xl font">Don't wait !</h1>
          <button class="px-6 py-2 rounded-full text-white font-bold t-4 btn-primary"> Order Now </button>
        </div>
        <div class="w-1/2">
          <img src="/img/hero-pizza.png" alt="" />
        </div>
      </div>
    </section>
    <section class="menu container mx-auto py-8">
      <h1 class="text-xl font-old mb-8">All pizzas</h1>
      <div class="grid grid-cols-4 gap-y-16 gap-x-12">
        <% pizzas.forEach(function(pizza) { %> 
          <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image %>" />
            <div class="text-center">
              <div>
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"
                  ><%= pizza.size %></span
                >
                <div class="flex items-center justify-around mt-6">
                  <span class="font-bold text-lg">$250</span>
                  <button data-pizza = "<%= JSON.stringify(pizza) %>"
                    class="add-to-cart py-1 px-6 rounded-full flex items-center">
                    <span>+</span>
                    <span class="ml-4">Add</span>
                  </button>
                </div>
              </div>
            </div>
          </div> 
        <% })%>
    </section>
    <script src="/js/app.js"></script>
  </body>
</html>
